{% extends 'base.html.twig' %}

{% block title %}{% trans %}User{% endtrans %}{% endblock %}

{% block body %}
    <h1>{% trans %}User{% endtrans %}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>{% trans %}Username{% endtrans %}</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>{% trans %}Email{% endtrans %}</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>{% trans %}Password{% endtrans %}</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>{% trans %}Roles{% endtrans %}</th>
                <td>{{ user.roles ? user.roles|join(', ') : '' }}</td>
            </tr>
            <tr>
                <th>{% trans %}Rol{% endtrans %}</th>
                <td>{{ user.rol }}</td>
            </tr>
            <tr>
                <th>{% trans %}Status{% endtrans %}</th>
                <td>{{ user.status }}</td>
            </tr>
            <tr>
                <th>{% trans %}Locale{% endtrans %}</th>
                <td>{{ user.locale }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('user_index') }}" class="btn btn-info">{% trans %}Back to list{% endtrans %}</a>

    <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-primary">{% trans %}Edit{% endtrans %}</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
