{% extends 'base.html.twig' %}

{% block title %}{% trans %}Login page{% endtrans %}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .error { color:red; }
</style>

<div class="example-wrapper">
    <h1>{% trans %}Login page{% endtrans %}</h1>
    {% if error %}
		<span class="error">{{ error.messageKey }}</span>
    {% endif %}
	<form method="POST">
		<input type="text" name="_username" placeholder="Enter username">
		<input type="password" name="_password" placeholder="Enter password">
		<button type="submit" class="btn btn-success">{% trans %}Login{% endtrans %}</button>
		<button ><a href="/reset" class="btn btn-secondary">{% trans %}Forgot password{% endtrans %}</a></button>
	</form>
</div>
{% endblock %}
