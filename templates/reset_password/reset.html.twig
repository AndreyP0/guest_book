{% extends 'base.html.twig' %}

{% block title %}Reset password{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="form-wrapper">
	{{ form_start(form) }}
    {{ form_row(form) }}
	{{ form_end(form) }}
</div>
<button type="submit" ><a href="/book" class="btn btn-info">{% trans %}Back to guestbook page{% endtrans %}</a></button>

	{% if new_password == true %}
		<p class="password">{% trans %}Your new password{% endtrans %}: {{ new_password}} </p>
	{% endif %}

{% endblock %}
